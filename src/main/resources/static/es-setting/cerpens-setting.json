{
  "index": {
    "number_of_shards": "1",
    "number_of_replicas": "1",
    "refresh_interval": "1s",
    "analysis": {
      "analyzer": {
        "auto_edgram": {
          "tokenizer": "ed_gram_token"
        },
        "auto_ngram": {
          "tokenizer": "n_gram_token"
        },
        "autocomplete_search": {
          "tokenizer": "lowercase"
        }
      },
      "tokenizer": {
        "ed_gram_token": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 10,
          "token_chars": [
            "letter"
          ]
        },
        "n_gram_token": {
          "type": "ngram",
          "min_gram": 3,
          "max_gram": 4,
          "token_chars": [
            "letter"
          ]
        }
      }
    }
  }
}
